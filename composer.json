{
    "name": "yurt0002/php-crud-music",
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "authors": [
        {
            "name": "Emre YURTTAS",
            "email": "emre.yurttas@etudiant.univ-reims.fr"
        }
    ],
    "require": {
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.55",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1",
        "codeception/module-asserts": "^1",
        "codeception/module-db": "^1"
    },
    "scripts": {
        "start:linux": [
            "Composer\\Config::disableProcessTimeout",
            "bin/run-server.sh"
